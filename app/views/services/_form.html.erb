<%= simple_form_for(service) do |f| %>
  <!-- [...] -->
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>
    <div class="form-inputs">
    <%= f.input :description %>
  </div>
    <div class="form-inputs">
    <%= f.input :picture_url %>
  </div>
    <div class="form-inputs">
    <%= f.input :category %>
  </div>
  <%= f.input :photo %>
